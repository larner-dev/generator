{
  "name": "{{name}}",
  "description": "A larner.dev project",
  "version": "1.0.0",
  "author": "Aaron Larner",
  "type": "module",
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:types{{#includes features "koa_api"}} && yarn build:api{{/includes}}",
    "build:cjs": "esbuild src/index.ts{{#includes features "command_line_tool"}} src/cli.ts{{/includes}} --bundle --platform=node --target=node16 --outdir=build/cjs  --packages=external --format=cjs --out-extension:.js=.cjs",
    "build:esm": "esbuild src/index.ts{{#includes features "command_line_tool"}} src/cli.ts{{/includes}} --bundle --platform=node --target=node16 --outdir=build/esm  --packages=external --format=esm",
    "build:types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outfile build/types/index.d.ts",
    {{#includes features "koa_api"}}
    "build:api": "swc ./src -d build/api",
    {{/includes}}
    "dev": "yarn build && concurrently 'yarn build:types --watch' 'yarn build:cjs --watch' 'yarn build:esm --watch'{{#includes features "koa_api"}} 'yarn build:api --watch' 'nodemon build/api/api.js -w ./build/api'{{/includes}}",
    {{#includes features "koa_api"}}
    "dev:api": "concurrently 'yarn build:api --watch' 'nodemon build/api/api.js -w ./build/api'",
    {{/includes}}
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    {{#includes features "publishable"}}
    "postversion": "git push && git push --tags",
    "prepublishOnly": "yarn test && yarn build",
    {{/includes}}
    "test": "vitest --run --dir ./src",
    "test-watch": "vitest --dir ./src"
  },
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.cjs"
    }
  },
  "types": "./build/types/index.d.ts",
  "main": "./build/esm/index.js",
  "devDependencies": {
    {{#each devDependencies}}
    "{{this.name}}": "{{this.version}}"{{#unless @last}},{{/unless}}
    {{/each}}
  },
  "dependencies": {
    {{#each dependencies}}
    "{{this.name}}": "{{this.version}}"{{#unless @last}},{{/unless}}
    {{/each}}
  },
  {{#includes features "public"}}
  "publishConfig": {
    "access": "public"
  },
  {{/includes}}
  {{#includes features "command_line_tool"}}
  "bin": {
    "{{dashCase name}}": "./build/esm/cli.js"
  },
  {{/includes}}
  "license": "{{#includes features "public"}}MIT{{/includes}}{{#excludes features "public"}}UNLICENSED{{/excludes}}"
}
