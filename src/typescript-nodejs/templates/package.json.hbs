{
  "name": "{{name}}",
  "description": "A larner.dev project",
  "version": "1.0.0",
  "author": "Aaron Larner",
  "type": "module",
  "scripts": {
    "build": "npm run build-cjs && npm run build-esm && npm run build-types",
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node14 --outdir=build/cjs  --packages=external --format=cjs",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --target=node14 --outdir=build/esm  --packages=external --format=esm",
    "build-types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outdir build/types",
    "dev": "npm run build-esm -- --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    {{#includes features "publishable"}}
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    {{/includes}}
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js",
    }
  },
  "types": "./build/types/index.d.ts",
  "main": "./build/esm/index.js",
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "esbuild": "0.16.16",
    "esbuild-jest": "0.5.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "jest": "29.3.1",
    "typescript": "4.9.4"
  },
  {{#includes features "public"}}
  "publishConfig": {
    "access": "public"
  },
  {{/includes}}
  "license": "UNLICENSED"
}
