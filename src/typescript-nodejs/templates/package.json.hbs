{
  "name": "{{name}}",
  "description": "A larner.dev project",
  "version": "1.0.0",
  "author": "Aaron Larner",
  "type": "module",
  "scripts": {
    "build": "npm run build-cjs && npm run build-esm && npm run build-types",
    {{#includes features "larner_dev_api"}}
    "build-cjs": "esbuild `find ./src -name '*.ts'` --platform=node --target=node16 --outdir=build/cjs --format=cjs",
    "build-esm": "esbuild `find ./src -name '*.ts'` --platform=node --target=node16 --outdir=build/esm --format=esm",
    "build-types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outdir build/types",
    "dev": "concurrently 'npm run build-esm -- --watch' 'nodemon build/esm/index.js -w ./build/esm -w node_modules'",
    {{/includes}}
    {{#excludes features "larner_dev_api"}}
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=build/cjs  --packages=external --format=cjs",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --target=node16 --outdir=build/esm  --packages=external --format=esm",
    "build-types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --outdir build/types",
    "dev": "npm run build-esm -- --watch",
    {{/excludes}}
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    {{#includes features "publishable"}}
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    {{/includes}}
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js"
    }
  },
  "types": "./build/types/index.d.ts",
  "main": "./build/esm/index.js",
  "devDependencies": {
    {{#each devDependencies}}
    "{{this.name}}": "{{this.version}}"{{#unless @last}},{{/unless}}
    {{/each}}
  },
  "dependencies": {
    {{#each dependencies}}
    "{{this.name}}": "{{this.version}}"{{#unless @last}},{{/unless}}
    {{/each}}
  },
  {{#includes features "public"}}
  "publishConfig": {
    "access": "public"
  },
  {{/includes}}
  "license": "UNLICENSED"
}
